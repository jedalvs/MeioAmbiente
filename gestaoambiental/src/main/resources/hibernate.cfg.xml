<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.gjt.mm.mysql.Driver</property>
        <property name="hibernate.connection.password">nando</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/gestao_ambiental</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
        
        <mapping class="br.com.gestaoambiental.bean.Acesso"></mapping>
        <mapping class="br.com.gestaoambiental.bean.Anexo"></mapping>
        <mapping class="br.com.gestaoambiental.bean.Documento"></mapping>
        <mapping class="br.com.gestaoambiental.bean.FormaProtecao"></mapping>
        <mapping class="br.com.gestaoambiental.bean.LocalOrigem"></mapping>
        <mapping class="br.com.gestaoambiental.bean.ModuloRecuperacao"></mapping>
        <mapping class="br.com.gestaoambiental.bean.TempoGuarda"></mapping>
    </session-factory>
</hibernate-configuration>
